<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuiaTI.PrincipalPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Blog" Command="{Binding AddCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Banner}" />
            <ListView HasUnevenRows="true" SeparatorVisibility="None"  ItemsSource="{Binding Contents}"  ItemSelected="ListView_OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Padding="20">
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Name}" Margin="20, 10, 20, 0" FontAttributes="Bold" FontSize="Large" />
                                    <Label Text="{Binding Description}" Margin="20, 10, 20, 0" FontSize="Small" />
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>